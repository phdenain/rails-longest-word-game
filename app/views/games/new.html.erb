<h1>New Game</h1>


<ul class="board">
  <% @letters.each do |letter|  %>
    <li class="letter"> <%= letter %> </li>
  <% end %>
</ul>

<form action="/score" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <%= hidden_field_tag :start, @start_time %>
  <input type="text" name="attempt" placeholder="What is the longest word you can find ?" class="input_form">
  <input type="submit">
</form>



